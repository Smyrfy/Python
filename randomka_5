
import random

–∫–∞—Ä—Ç–∏ = [2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10, 11] * 4  # –ö–æ–ª–æ–¥–∞ –∑ 52 –∫–∞—Ä—Ç.—Ç–∞–º –≤–∞–ª—î—Ç, –¥–∞–º–∞,–∫–æ—Ä–æ–ª—å —ñ 10 –π–¥–µ –ø–æ 10 –∞ —Ç—É–∑ 11

while True:
    input("\nüéÆ –ù–∞—Ç–∏—Å–Ω–∏ Enter –¥–ª—è –ø–æ—á–∞—Ç–∫—É –≥—Ä–∏...")

    –≥ = [random.choice(–∫–∞—Ä—Ç–∏), random.choice(–∫–∞—Ä—Ç–∏)]
    –¥ = [random.choice(–∫–∞—Ä—Ç–∏), random.choice(–∫–∞—Ä—Ç–∏)]

    print(f"\n–¢–≤–æ—ó –∫–∞—Ä—Ç–∏: {–≥} = {sum(–≥)}")
    print(f"–ö–∞—Ä—Ç–∞ –¥–∏–ª–µ—Ä–∞: [{–¥[0]}, ?]")

    while sum(–≥) < 21 and input("–ë–µ—Ä–µ—à –∫–∞—Ä—Ç—É? (—Ç/–Ω): ") == '—Ç':
        –≥.append(random.choice(–∫–∞—Ä—Ç–∏))
        print(f"–¢–≤–æ—ó –∫–∞—Ä—Ç–∏: {–≥} = {sum(–≥)}")

    while sum(–¥) < 17:
        –¥.append(random.choice(–∫–∞—Ä—Ç–∏))

    print(f"\n–§–Ü–ù–ê–õ:")
    print(f"–¢–∏: {sum(–≥)} | –î–∏–ª–µ—Ä: {sum(–¥)}")

    if sum(–≥) > 21:
        print("–¢–∏ –ø—Ä–æ–≥—Ä–∞–≤! üí•")
    elif sum(–¥) > 21:
        print("–¢–∏ –≤–∏–≥—Ä–∞–≤! üéâ")
    elif sum(–≥) > sum(–¥):
        print("–¢–∏ –≤–∏–≥—Ä–∞–≤! üéâ")
    elif sum(–≥) < sum(–¥):
        print("–¢–∏ –ø—Ä–æ–≥—Ä–∞–≤! üí•")
    else:
        print("–ù—ñ—á–∏—è! ü§ù")
