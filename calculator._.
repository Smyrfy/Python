print('Калькулятор')
f = int(input('Виберіть функцію \nДодавання -- 1\nВіднімання -- 2\nМноження -- 3\nДілення -- 4\nПіднесення до квадрату -- 5\nОбчислення квадратного кореня -- 6\n'))

if f == 1:
    a = int(input('Введіть перше число: '))
    b = int(input('Введіть друге число: '))
    r = a + b
elif f == 2:
    a = int(input('Введіть перше число: '))
    b = int(input('Введіть друге число: '))
    r = a - b
elif f == 3:
    a = int(input('Введіть перше число: '))
    b = int(input('Введіть друге число: '))
    r = a * b
elif f == 4:
    a = int(input('Введіть перше число: '))
    b = int(input('Введіть друге число: '))
    r = float(a / b)
elif f == 5:
    c = int(input('Введіть число: '))
    r = c * c
elif f == 6:
    c = int(input('Введіть число: '))
    sqrt = c ** 0.5
    r = sqrt
print('Відповідь:', r)
